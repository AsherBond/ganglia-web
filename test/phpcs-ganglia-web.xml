<?xml version="1.0"?>
<ruleset name="ganglia-web">
 <description>standard for ganglia-web.</description>

 <!-- Ignore external libraries -->
 <exclude-pattern>*/lib/Services/*</exclude-pattern>
 <exclude-pattern>*/lib/Zend/*</exclude-pattern>
 <exclude-pattern>*/lib/Zend/Acl/*</exclude-pattern>

 <rule ref="Generic">
  <!-- Inline -->
  <exclude name="Generic.ControlStructures.InlineControlStructure" />
  <exclude name="Generic.Files.InlineHTML" />
  <exclude name="Generic.PHP.CharacterBeforePHPOpeningTag" />
  <!-- Whitespace -->
  <exclude name="Generic.Files.EndFileNoNewline" />
  <exclude name="Generic.Files.LineLength" />
  <exclude name="Generic.Formatting.MultipleStatementAlignment" />
  <exclude name="Generic.Formatting.SpaceAfterCast" />
  <exclude name="Generic.Formatting.NoSpaceAfterCast" />
  <exclude name="Generic.Functions.OpeningFunctionBraceBsdAllman" />
  <exclude name="Generic.WhiteSpace.DisallowSpaceIndent" />
  <exclude name="Generic.WhiteSpace.DisallowTabIndent" />
  <exclude name="Generic.WhiteSpace.ScopeIndent" />
  <!-- Constants -->
  <exclude name="Generic.PHP.LowerCaseConstant" />
  <exclude name="Generic.PHP.UpperCaseConstant" />
  <!-- Function naming -->
  <exclude name="Generic.NamingConventions.CamelCapsFunctionName" />
  <!-- File naming -->
  <exclude name="Generic.Files.LowercasedFilename" />
  <!-- Multi-line string concat -->
  <exclude name="Generic.Strings.UnnecessaryStringConcat" />
  <!-- Arrays -->
  <exclude name="Generic.Arrays.DisallowLongArraySyntax" />
  <!-- Silencing -->
  <exclude name="Generic.PHP.NoSilencedErrors" />
  <!-- Commenting -->
  <exclude name="Generic.Commenting.Todo" />
  <!-- Metrics -->
  <exclude name="Generic.Metrics.CyclomaticComplexity" />
  <exclude name="Generic.Metrics.NestingLevel" />
 </rule>

</ruleset>
